h3 Profile
.row
  .col-xs-6
    .row
      .col-xs-12
        form(novalidate, name='profileForm', role='form')
          .form-group
            label(for='username') Username
            input.form-control#username(name='username', type='text', ng-model='user.username', ng-minlength='3', required)
          .form-group
            label(for='gender') Gender
            select.form-control#gender(name='gender', ng-model='user.gender', required)
              option(value='male') Male
              option(value='female') Female
          .form-group
            label(for='age') Age(y)
            input.form-control#due(name='age', type='number', ng-model='user.age', required)
          .form-group
            label(for='weight') Weight(lb)
            input.form-control#due(name='weight', type='number', ng-model='user.weight', required)
    .row
      .col-xs-3
        .form-group
          label(for='ft') Hieght(ft)
          input.form-control#ft(name='ft', type='number', ng-model='user.ft', required)
      .col-xs-3
        .form-group
          label(for='in') (in)
          input.form-control#in(name='in', type='number', ng-model='user.in', required)
        .form-group
          button.btn.btn-success(ng-show='profileForm.$valid', ng-click='addProfile()') Update Profile
  .col-xs-6
    #profile
      h3 Your Updated Information
      h4 Username {{user.username}}
      h4 Gender {{user.gender}}
      h4 Weight {{user.weight}} lbs
      h4 Age {{user.age}} years
      h4 Height {{user.height}} cms
