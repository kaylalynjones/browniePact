h2.text-center Daily Calculations
.row
  .col-xs-2
  .col-xs-4
    form.form#food-form(name='foodForm', role='form', novalidate)
      h4.text-center What did you eat today?
      .form-group
        label(for='foodName') Name
        input.form-control#food-name(type='text', name='foodName', ng-model='food.name', required)
      .form-group
        label(for='link') Calories
        input.form-control#calories(type='number', name='calories', ng-model='food.calories', required)
      .form-group
        label(for='foodDate') Date
        input.form-control#foodDate(type='date', name='foodDate', ng-model='food.date', required)
      .form-group
        label(for='meal') Meal
        select.form-control(name='meal', ng-model='food.meal', required)
          option.form-control(value='') Select Meal
          option.form-control(value='breakfast') Breakfast
          option.form-control(value='snack') Snack
          option.form-control(value='lunch') Lunch
          option.form-control(value='dinner') Dinner
      button.btn.btn-primary.pull-right(ng-show='foodForm.$valid', ng-click='addFood()') Add Meal
  .col-xs-4.info
    h2 Today is {{date | date}}
    h3 You Consumed:
    div(ng-repeat='food in foods')
      h4.name {{food.name}}
      h5 {{food.calories}}
      h5 {{food.meal}}
      hr
  .col-xs-2

.row
  .col-xs-2
  .col-xs-4
    form.form#exercise-form(name='exerciseForm', role='form', novalidate)
      h4.text-center Did you exercise?
      .form-group
        label(for='exerDate') Date
        input.form-control#exerDate(type='date', name='exerDate', ng-model='exercise.date', required)
      .form-group
        label.label-control(for='typeId') Type
        select.form-control(name='typeId', ng-model='exercise.type', ng-options='a._id as a.name for a in activities', required)
          option.form-control(value='') Select Type
      .form-group
        label(for='duration') Duration
        select.form-control(name='duration', ng-model='exercise.duration' required)
          option.form-control(value='') Select Duration
          option.form-control 30
          option.form-control 60
          option.form-control 90
          option.form-control 120
      button.btn.btn-primary.pull-right(ng-show='exerciseForm.$valid', ng-click='addExercise()') Add Exercise
    .reward
      h2 You Totally Deserve a: Raisin!
  .col-xs-4.info
    h3 Your Activity:
    div(ng-repeat='exercise in exercises')
      h5.name {{ exercise.name }}
      h5 {{ exercise.date | date}}
      h5 {{ exercise.duration }} Minutes Duration
      h5 {{ exercise.calories }} Calories
      hr
  .col-xs-2


